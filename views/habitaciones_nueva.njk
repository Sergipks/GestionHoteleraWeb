{% extends "base.njk" %}

{% block titulo %}Habitaciones | Nueva{% endblock %}

{% block contenido %}

    <h1>Inserción de nueva habitación</h1>

    {% if errores.general %}
        <p class="alert alert-danger">{{ errores.general }}</p>
    {% endif %}

    <form action="/habitaciones" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="numero">Número de la habitación:</label>
            {% if errores.numero %}
                <p class="text-danger">{{ errores.numero }}</p>
            {% endif %}
            <input type="number" class="form-control" name="numero"
                placeholder="Número de la habitación..." value="{{ datos.numero }}">
        </div>
        <div class="form-group">
            <label for="editorial">Tipo de habitación:</label>            
            <select class="form-control" name="editorial" required>
                <option value="" selected disabled hidden>-Seleccionar tipo de habitación</option>
                <option value="individual">Individual</option>
                <option value="doble">Doble</option>
                <option value="familiar">Familiar</option>
                <option value="suite">Suite</option>
            </select>
        </div>
        <div class="form-group">
            <label for="precio">Precio:</label>
            {% if errores.precio %}
                <p class="text-danger">{{ errores.precio }}</p>
            {% endif %}
            <input type="number" class="form-control" name="precio"
                placeholder="Precio de la habitación..." step=".01" value="{{ datos.precio }}">
        </div>
        <div class="form-group">
            <label for="descripcion">Descripción:</label>
            {% if errores.descripcion %}
                <p class="text-danger">{{ errores.descripcion }}</p>
            {% endif %}
            <textarea class="form-control" name="descripcion" value="{{ datos.descripcion }}"
                placeholder="Descripción de la habitación..."></textarea>
        </div>
        <div class="form-group">
            <label for="imagen">Imagen:</label>
            <input type="file" class="form-control" name="imagen"/>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>

{% endblock %}
